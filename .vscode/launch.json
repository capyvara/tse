{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "cwd": "${workspaceRoot}",
            "console": "integratedTerminal",
            "args": "pack data/download/oficial/ele2022/[0-9]*/** --remove",
            "justMyCode": false
        },
        {
            "name": "Scrapy Current File",
            "type": "python",
            "request": "launch",
            "module": "scrapy",
            "cwd": "${workspaceRoot}",
            "args": [
                "runspider",
                "${file}",
                "-s",
                "AUTOTHROTTLE_DEBUG=True",
                "-s", 
                "SCHEDULER_DEBUG=True",
                "--loglevel=DEBUG",
                "-a",
                "continuous=True"
            ],
            "console": "integratedTerminal",
            "env": {"__https_proxy": "localhost:8888"},
            "justMyCode": false
        }
    ]
}